<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_item_location"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/text_road_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/text_building_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_item_location"
        android:text="dfdfdfdf"/>

    <TextView
        android:id="@+id/text_building_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/text_road_address"
        app:layout_constraintLeft_toRightOf="@id/image_item_location"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="dfdfdfdf"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/base_gray"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/image_item_location"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_item_location"/>

</androidx.constraintlayout.widget.ConstraintLayout>