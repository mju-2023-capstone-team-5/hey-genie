                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12sp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/base_white_round_shape"/>

                    <TextView
                        android:layout_width="match_parent"
